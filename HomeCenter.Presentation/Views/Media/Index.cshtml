@{
    ViewBag.Title = "Index";
}

<div ng-app="myTutorialApp">
    <div ng-cloak ng-controller="mediaController as vm">
        <div class="well col-md-12">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button ng-click="vm.Up()" type="button" class="btn btn-default btn-block btn-lg">
                        <span class="glyphicon glyphicon-arrow-up"></span>
                    </button>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="btn-group btn-group-justified">

                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.Left()" type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-arrow-left"></span>
                            </button>
                        </div>
                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.Right()" type="button" class="btn btn-default">
                                <span class=" glyphicon glyphicon-arrow-right"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button ng-click="vm.Down()" type="button" class="btn btn-default btn-block btn-lg">
                        <span class=" glyphicon glyphicon-arrow-down"></span>
                    </button>
                </div>
                <div class="col-md-3"></div>
            </div>
            &nbsp;
            <div class="row">
                <div class="col-md-12">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.Play()" type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </div>

                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.Pause()" type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-pause"></span>
                            </button>
                        </div>

                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.Stop()" type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-stop"></span>
                            </button>
                        </div>

                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.Back()" type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-share-alt icon-flipped"></span>
                            </button>

                        </div>
                    </div>
                </div>
                &nbsp;
                <div class="col-md-12">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.Mute()" type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-volume-off"></span>
                            </button>
                        </div>

                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.VolumeDown()" type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-volume-down"></span>
                            </button>
                        </div>

                        <div class="btn-group btn-group-lg">
                            <button ng-click="vm.VolumeUp()" type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-volume-up"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
